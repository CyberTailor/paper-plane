{
    "app-id": "com.github.melix99.telegrand.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "telegrand",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--talk-name=org.a11y.Bus",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules": [
        {
            "name": "libsass",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "tdlib",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tdlib/td.git",
                    "branch": "7d41d9eaa58a6e0927806283252dc9e74eda5512"
                }
            ]
        },
        {
            "name": "telegrand",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
